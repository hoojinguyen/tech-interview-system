{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "env": {
    "NEXT_PUBLIC_API_URL": "@api-url",
    "NEXT_PUBLIC_APP_ENV": "@app-env",
    "NEXT_PUBLIC_ADMIN_SECRET": "@admin-secret"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@api-url",
      "NEXT_PUBLIC_APP_ENV": "@app-env",
      "NEXT_PUBLIC_ADMIN_SECRET": "@admin-secret"
    }
  },
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  }
}
{
  "name": "tech-interview-platform",
  "version": "1.0.0",
  "description": "A comprehensive tech interview preparation platform",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "backend",
      "packages/*"
    ]
  },
  "scripts": {
    "start": "./scripts/start-dev.sh",
    "start:quick": "./scripts/quick-start.sh",
    "dev": "concurrently \"yarn workspace client dev\" \"yarn workspace admin dev\" \"yarn run dev:backend\"",
    "dev:backend-only": "yarn run docker:up && cd backend && bun run dev",
    "dev:client": "yarn workspace client dev",
    "dev:admin": "yarn workspace admin dev",
    "dev:backend": "cd backend && bun run dev",
    "build": "yarn workspaces run build",
    "build:client": "yarn workspace client build",
    "build:admin": "yarn workspace admin build",
    "build:backend": "yarn workspace backend build",
    "lint": "yarn workspaces run lint",
    "lint:client": "yarn workspace client lint",
    "lint:admin": "yarn workspace admin lint",
    "lint:backend": "yarn workspace backend lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "type-check": "yarn workspaces run type-check",
    "type-check:client": "yarn workspace client type-check",
    "type-check:admin": "yarn workspace admin type-check",
    "type-check:backend": "yarn workspace backend type-check",
    "setup:dev": "./scripts/setup-dev.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd backend && bun run db:migrate",
    "db:seed": "cd backend && bun run db:seed",
    "test": "npm run test:backend",
    "test:backend": "cd backend && bun test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
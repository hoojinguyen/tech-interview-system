{
  "name": "tech-interview-platform",
  "version": "1.0.0",
  "description": "A comprehensive tech interview preparation platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:admin\" \"npm run dev:backend\"",
    "dev:client": "cd apps/client && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:backend": "cd backend && bun run dev",
    "build": "npm run build:client && npm run build:admin && npm run build:backend",
    "build:client": "cd apps/client && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "build:backend": "cd backend && bun run build",
    "lint": "npm run lint:client && npm run lint:admin && npm run lint:backend",
    "lint:client": "cd apps/client && npm run lint",
    "lint:admin": "cd apps/admin && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "type-check": "npm run type-check:client && npm run type-check:admin && npm run type-check:backend",
    "type-check:client": "cd apps/client && npm run type-check",
    "type-check:admin": "cd apps/admin && npm run type-check",
    "type-check:backend": "cd backend && bun run type-check",
    "setup:dev": "./scripts/setup-dev.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd backend && bun run db:migrate",
    "db:seed": "cd backend && bun run db:seed",
    "test": "npm run test:backend",
    "test:backend": "cd backend && bun test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}